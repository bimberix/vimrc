{
    "diagnostic-languageserver.mergeConfig": true,
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "python": "pylint"
    },
    "diagnostic-languageserver.formatFiletypes": {
        "sh": "shfmt",
        "python": [
            "black",
            "isort",
            "docformatter"
        ]
    },
    "diagnostic-languageserver.linters": {
        "pylint": {
            "debounce": 500,
            "args": [
//                "--rcfile",
//                "pyproject.toml",
                "-f",
                "json",
                "--from-stdin",
                "%filename"
            ],
            "securities": {
                "informational": "info",
                "refactor": "hint",
                "convention": "hint",
                "warning": "warning",
                "error": "error",
                "fatal": "error"
            }
        }
    },
    "diagnostic-languageserver.formatters": {
        "black": {
            "args": [
//                "--config",
//                "pyproject.toml",
                "--quiet",
                "-"
            ]
        },
        "isort": {
            "args": [
//                "--sp",
//                "pyproject.toml",
                "--quiet",
                "-"
            ]
        },
        "docformatter": {
            "command": "docformatter",
            "args": [
                "--in-place",
                "--pre-summary-newline",
                "--make-summary-multi-line",
                "-"
            ]
        }
    },
    "clangd.semanticHighlighting": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",
    //    "clangd.arguments": ["-std=c++17"],
    //"clangd.fallbackFlags": [
    //    "-std=c++17"
    //],
    "jedi.enable": true,
    "jedi.startupMessage": false,
    "jedi.markupKindPreferred": "markdown",
    "jedi.trace.server": "verbose",
    "jedi.jediSettings.autoImportModules": [],
    "jedi.executable.command": "jedi-language-server",
    "jedi.executable.args": [],
    "jedi.completion.disableSnippets": false,
    "jedi.completion.resolveEagerly": true,
    "jedi.diagnostics.enable": true,
    "jedi.diagnostics.didOpen": true,
    "jedi.diagnostics.didChange": true,
    "jedi.diagnostics.didSave": true,
    "jedi.workspace.extraPaths": [],
    "yaml.format.enable": true,
    "yaml.completion": true,
    "yaml.validate": true,
    "suggest.defaultSortMethod": "alphabetical",
    "suggest.autoTrigger": "none",
    "suggest.minTriggerInputLength": 3,
    "diagnostic.errorSign": "●",
    "diagnostic.warningSign": "▲",
    "diagnostic.infoSign": "■",
    "diagnostic.hintSign": "◆",
    "diagnostic.displayByAle": false,
    "diagnostic.level": "hint",
    "diagnostic.format": "%source: %message",
    "diagnostic.enableMessage": "always",
    "diagnostic.messageTarget": "float",
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextLines": 10,
    "diagnostic.virtualTextCurrentLineOnly": true,
    "diagnostic.checkCurrentLine": true,
//    "diagnostic.messageDelay": 2000,
    "properties": {
        "http.proxy": {
            "type": "string",
            "default": "",
            "description": "http proxy uri, used for extensions that send request. Format: proxy-server:1234 or user:password@prox-server:1234 with auth support"
        }
    },
    "cSpell.userWords": [
        "asyncio",
        "deque",
        "uart",
        "unregisters"
    ]
}
